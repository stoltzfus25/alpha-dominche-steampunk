<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bkgd"
    tools:context=".SPCleaningCycleActivity" >
    
    <FrameLayout
        android:id="@+id/menu_wrap"
	    android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="320dp"
        android:layout_height="match_parent" >
	    <fragment
	        android:id="@+id/menu_layout"
	        android:name="com.alphadominche.steampunkhmi.SPMainMenu"
	        android:layout_marginLeft="0dp"
	        android:layout_marginTop="0dp"
	        android:layout_width="320dp"
	        android:layout_height="match_parent" 
	         >
	    </fragment>
	</FrameLayout>
	<FrameLayout
	    android:id="@+id/layout_wrap"
	    android:layout_width="920dp"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="-320.5dp"
	    android:layout_marginTop="0dp" >
	     <fragment
	        android:id="@+id/content_layout"
	        android:name="com.alphadominche.steampunkhmi.SPCleaningCycleFragment"
	        android:layout_marginLeft="320dp"
	        android:layout_marginTop="0dp"
	        android:layout_width="600dp"
	        android:layout_height="match_parent" >
	    </fragment>    
    </FrameLayout>

	  <View 
	      android:id="@+id/sp_blanking_widget"
	      android:layout_alignParentTop="true"
	      android:layout_alignParentLeft="true"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:background="@color/black"
	      android:visibility="gone" />
	  
</FrameLayout>
