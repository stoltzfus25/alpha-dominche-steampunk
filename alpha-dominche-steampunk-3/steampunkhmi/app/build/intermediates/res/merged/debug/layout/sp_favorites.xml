<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FavoritesEditor" >

   <LinearLayout
        android:id="@+id/machine_settings_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/recipe_bkgd"
        android:orientation="vertical"
        android:paddingLeft="@dimen/recipe_top_box_side_margins"
        android:paddingRight="@dimen/recipe_top_box_side_margins" >

        <LinearLayout
            android:id="@+id/favorites_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_save" />

            <TextView
                android:id="@+id/favorites_layout_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Favorites"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="@dimen/recipe_editor_title_text_height" />

            <ImageView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/x1280" />

        </LinearLayout>
        
        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="30dp" >
            
	        <FrameLayout
	            android:id="@+id/favorites_clean_selections"
		        android:layout_width="60dp"
		        android:layout_height="40dp"
		        android:background="@drawable/content_border" >
            
                <TextView
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="Clean"
	                android:textColor="@color/white"
	                android:gravity="center_vertical|center_horizontal"
	                android:textSize="@dimen/favorites_select_number" />
 
        	</FrameLayout>
        	
        </LinearLayout>

        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp" >
            
            <FrameLayout
                android:id="@+id/favorites_selection_1_view"
                android:layout_width="@dimen/favorites_squares"
		        android:layout_height="@dimen/favorites_squares"
		        android:background="@drawable/content_border"  >
		        
                <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dp"
	                android:text="1"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
                <ImageView
	                android:id="@+id/favorites_selection_1_icon"
	                android:layout_width="@dimen/favorites_icon_size"
	                android:layout_height="@dimen/favorites_icon_size"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="30dp" />
                
                <TextView 
                    android:id="@+id/favorites_selection_1_text"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginTop="65dp"
	                android:gravity="center_horizontal"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
            </FrameLayout>
            
            <FrameLayout
                android:id="@+id/favorites_selection_2_view"
                android:layout_width="@dimen/favorites_squares"
		        android:layout_height="@dimen/favorites_squares"
		        android:layout_marginLeft="20dp" 
		        android:background="@drawable/content_border"  >
                
                <TextView
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dp" 
	                android:layout_weight="1"
	                android:text="2"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
                <ImageView
	                android:id="@+id/favorites_selection_2_icon"
	                android:layout_width="@dimen/favorites_icon_size"
	                android:layout_height="@dimen/favorites_icon_size"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="30dp" />
                
                <TextView 
                    android:id="@+id/favorites_selection_2_text"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginTop="65dp"
	                android:gravity="center_horizontal"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
            </FrameLayout>
            
            <FrameLayout
                android:id="@+id/favorites_selection_3_view"
                android:layout_width="@dimen/favorites_squares"
		        android:layout_height="@dimen/favorites_squares"
		        android:layout_marginLeft="20dp" 
		        android:background="@drawable/content_border"  >
                
                <TextView
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dp" 
	                android:layout_weight="1"
	                android:text="3"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
                <ImageView
	                android:id="@+id/favorites_selection_3_icon"
	                android:layout_width="@dimen/favorites_icon_size"
	                android:layout_height="@dimen/favorites_icon_size"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="30dp"/>
                
                <TextView 
                    android:id="@+id/favorites_selection_3_text"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginTop="65dp"
	                android:gravity="center_horizontal"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
            </FrameLayout>
            
            <FrameLayout
                android:id="@+id/favorites_selection_4_view"
                android:layout_width="@dimen/favorites_squares"
		        android:layout_height="@dimen/favorites_squares"
		        android:layout_marginLeft="20dp" 
		        android:background="@drawable/content_border" >
                
                <TextView
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dp" 
	                android:layout_weight="1"
	                android:text="4"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
                <ImageView
                    android:id="@+id/favorites_selection_4_icon"
	                android:layout_width="@dimen/favorites_icon_size"
	                android:layout_height="@dimen/favorites_icon_size"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="30dp" />
                
                <TextView 
                    android:id="@+id/favorites_selection_4_text"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginTop="65dp"
	                android:gravity="center_horizontal"
	                android:textColor="@color/white"
	                android:textSize="@dimen/favorites_select_number" />
                
            </FrameLayout>
	    
	    </LinearLayout>
        
        <ListView
            android:id="@+id/favorites_list"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

	  
</RelativeLayout>
