<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		
		<FrameLayout
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/recipe_list_view_my">
    	
		    <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" >
    	
				<TextView
				    android:id="@+id/roaster_name_label"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:gravity="left"
				    android:maxLength="20"
				    android:textColor="@color/gray_label_color"
				    android:textSize="21dp"
				    android:layout_marginLeft="70dp"
				    android:layout_marginTop="15dp" />
				
				<TextView
				    android:id="@+id/volume_label"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:gravity="left"
				    android:textColor="@color/gray_label_color"
				    android:textSize="21dp"
				    android:layout_marginLeft="25dp"
				    android:layout_marginTop="15dp" />
							
				<TextView
				    android:id="@+id/recipe_name_label"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:gravity="left"
				    android:maxLength="20"
				    android:textColor="@color/white"
				    android:textSize="21dp"
				    android:layout_marginLeft="25dp"
				    android:layout_marginTop="15dp" />
				
			</LinearLayout>
		
		</FrameLayout>  
		
		<ImageView
		    android:id="@+id/recipe_type_image"
		    android:src="@drawable/bean_gray"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="14dp"
		    android:layout_marginLeft="14dp" />
		<ImageView
		    android:id="@+id/favorite_star_image"
		    android:src="@drawable/teal_star"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginTop="17dp"
		    android:layout_marginRight="17dp"
		    android:visibility="gone" />
		
	</FrameLayout>
	
	<LinearLayout
	    android:id="@+id/my_recipes_dropdown"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="60dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_gravity="center_horizontal"
	    android:visibility="gone" >

	    <FrameLayout
	        android:id="@+id/my_recipes_edit_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/edit_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	    
	    <FrameLayout
	        android:id="@+id/my_recipes_duplicate_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/duplicate_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	    
	    <FrameLayout
	        android:id="@+id/my_recipes_publish_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:id="@+id/my_recipes_publish_text"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/publish_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	    <FrameLayout
	        android:id="@+id/my_recipes_favorite_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/favorite_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	    
	</LinearLayout>
	
</FrameLayout>