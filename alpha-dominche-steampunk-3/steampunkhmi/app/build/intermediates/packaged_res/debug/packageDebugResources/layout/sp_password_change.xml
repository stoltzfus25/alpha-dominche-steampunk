<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sp_change_password_modal_width"
    android:layout_height="@dimen/sp_change_password_modal_height"
    android:background="@drawable/slider_border_thin"
    android:gravity="center"
    android:layout_gravity="center" ><!--android:layout_height="@dimen/sp_slider_modal_height"-->
    
    <TextView
		    android:id="@+id/sp_change_password_modal_title"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_gravity="center_horizontal"
		    android:text="@string/change_password_modal_title"
		    android:textSize="@dimen/sp_password_change_title_text_size"
		    android:textColor="@color/white"
		    android:gravity="center" />
    

   <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:layout_marginTop="55dp"
	    android:orientation="vertical"
	    android:layout_gravity="center_horizontal">
	    
		<EditText
	            android:id="@+id/sp_username_change_old_password"
	            android:layout_width="300dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="50dp"
	            android:gravity="center_horizontal"
	            android:paddingLeft="20dp"
	            android:paddingTop="20dp"
	            android:background="@drawable/text_field_border"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:inputType="textPassword"
	            android:maxLength="32"
	            android:nextFocusDown="@+id/sp_username_change_new_password"
	            android:textColor="@color/white"
	            android:textSize="@dimen/sp_password_change_hint_text"
	            android:hint="@string/change_password_old_password_hint"
	            android:textColorHint="#40ffffff"
	            android:selectAllOnFocus="true" />
		<EditText
	            android:id="@+id/sp_username_change_new_password"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp"
	            android:gravity="center_horizontal"
	            android:paddingLeft="20dp"
	            android:paddingTop="20dp"
	            android:background="@drawable/text_field_border"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:inputType="textPassword"
	            android:maxLength="32"
	            android:nextFocusDown="@+id/sp_username_change_new_password"
	            android:textColor="@color/white"
	            android:textSize="@dimen/sp_password_change_hint_text"
	            android:hint="@string/change_password_new_password_hint"
	            android:textColorHint="#40ffffff"
	            android:selectAllOnFocus="true" />
		<EditText
	            android:id="@+id/sp_username_change_confirm_new_password"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp"
	            android:gravity="center_horizontal"
	            android:paddingLeft="20dp"
	            android:paddingTop="20dp"
	            android:background="@drawable/text_field_border"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:inputType="textPassword"
	            android:maxLength="32"
	            android:textColor="@color/white"
	            android:textSize="@dimen/sp_password_change_hint_text"
	            android:hint="@string/change_password_confirm_new_password_hint"
	            android:textColorHint="#40ffffff"
	            android:selectAllOnFocus="true" />
		
		
	
	</LinearLayout>

   <TextView
		    android:id="@+id/sp_password_change_password_missmatch"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="110dp"
		    android:layout_gravity="center_horizontal"
		    android:text="@string/passwords_do_not_match"
		    android:textSize="@dimen/sp_pin_text_size"
		    android:textColor="@color/red"
		    android:gravity="center"
		    android:visibility="gone" />
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:layout_marginTop="320dp"
	    android:paddingBottom="15dp"
	    android:layout_gravity="center_horizontal">
	    
	    <Button 
		    android:id="@+id/sp_change_password_cancel_button"
		    android:layout_width="100dp"
		    android:layout_marginRight="20dp"
		    android:layout_height="fill_parent"
		    android:text= "@string/cancel_text"
		    android:textColor="@color/white"
		    android:background="@drawable/slider_border_thin"/>
	    
	    
	        
	    <Button 
		    android:id="@+id/sp_change_password_submit_button"
		    android:layout_width="100dp"
		    android:layout_marginLeft="20dp"
		    android:layout_height="fill_parent"
		    android:text= "@string/submit_text"
		    android:textColor="@color/white"
		    android:background="@drawable/slider_border_thin" />
	    
	</LinearLayout>
	
</FrameLayout>
