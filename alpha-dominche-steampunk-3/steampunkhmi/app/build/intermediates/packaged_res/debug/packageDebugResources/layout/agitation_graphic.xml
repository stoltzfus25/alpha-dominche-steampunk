<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:padding="0dp" >
    <!-- android:background="@color/dark_blue_test_semi_trans" -->
    
    <SeekBar
        android:id="@+id/length_slider"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/agitation_graphic_top"
        android:progressDrawable="@drawable/slider_white_bars_progress"
        android:thumb="@drawable/sp_slider_modal_thumb"
        android:max="150"
        android:padding="0dp" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recipe_agitation_small_value_label_1_left"
        android:layout_marginTop="@dimen/recipe_agitation_small_value_label_top"
        android:background="@drawable/agitation_time_bkgd"
        android:gravity="center"
        android:text="@string/default_agitation_graphic_text"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/recipe_small_label_text_height" />

    <View
		android:id="@+id/link"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="left" />
                
</FrameLayout>
