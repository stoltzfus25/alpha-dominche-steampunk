<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/slider_border_thin"
    android:gravity="center" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="@dimen/agitation_editor_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" >

		    <LinearLayout
		        android:id="@+id/ag_start_slider_group"
		        android:layout_width="@dimen/agitation_slider_width"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_marginLeft="20dp"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
		        
		        <TextView
		            android:id="@+id/title_label"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="15dp"
		            android:text="Start Time"
		            android:textColor="@color/white"
		            android:textSize="25dp" />
		
		            <ImageView
		                android:id="@+id/up_arrow"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="15dp"
		                android:src="@drawable/modal_slider_up_arrow" />
		
		            <LinearLayout
		                android:id="@+id/sp_slider_modal_seek_bar_holder"
		                android:layout_width="fill_parent"
		                android:layout_height="510dp"
		                android:layout_marginTop="7dp"
		                android:gravity="center_horizontal"
		                android:orientation="horizontal" >
		
		                <SeekBar
		                    android:id="@+id/seek_bar"
		                    android:layout_width="510dp"
		                    android:layout_height="86dp"
		                    android:layout_marginLeft="0dp"
		                    android:layout_marginTop="213dp"
		                    android:background="@drawable/slider_border_thin"
		                    android:max="100"
		                    android:maxHeight="86dp"
		                    android:paddingLeft="-10dp"
		                    android:progress="50"
		                    android:progressDrawable="@drawable/sp_slider_modal_progress_drawable"
		                    android:rotation="270"
		                    android:secondaryProgress="0"
		                    android:thumb="@drawable/sp_slider_modal_thumb"
		                    android:thumbOffset="0dp" />
		            </LinearLayout>
		            
		            <ImageView
		                android:id="@+id/down_arrow"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="9dp"
		                android:src="@drawable/modal_slider_down_arrow" />
		
		            <LinearLayout
		                android:id="@+id/sp_slider_modal_value_label_holder"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="15dp"
		                android:orientation="horizontal" >
		
		                <LinearLayout
		                    android:layout_width="0dp"
		                    android:layout_height="match_parent"
		                    android:layout_weight="1" />
		
		                <TextView
		                    android:id="@+id/value_label"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="120"
		                    android:textColor="@color/white"
		                    android:textSize="23dp" />
		
		                <LinearLayout
		                    android:layout_width="0dp"
		                    android:layout_height="match_parent"
		                    android:layout_weight="1"
		                    android:gravity="left|bottom" >
		
		                    <TextView
		                        android:id="@+id/units_label"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginBottom="1dp"
		                        android:layout_marginLeft="5dp"
		                        android:text="@string/seconds_abbreviation"
		                        android:textColor="@color/white" />
		                </LinearLayout>
		            </LinearLayout>
		
			</LinearLayout>

		    <LinearLayout
		        android:id="@+id/ag_duration_slider_group"
		        android:layout_width="@dimen/agitation_slider_width"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
			    
			    <TextView
			        android:id="@+id/title_label"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="15dp"
			        android:text="Duration"
			        android:textColor="@color/white"
			        android:textSize="25dp" />
		
		            <ImageView
		                android:id="@+id/up_arrow"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="15dp"
		                android:src="@drawable/modal_slider_up_arrow" />
		
		            <LinearLayout
		                android:id="@+id/sp_slider_modal_seek_bar_holder"
		                android:layout_width="fill_parent"
		                android:layout_height="510dp"
		                android:layout_marginTop="7dp"
		                android:gravity="center_horizontal"
		                android:orientation="horizontal" >
		
		                <SeekBar
		                    android:id="@+id/seek_bar"
		                    android:layout_width="510dp"
		                    android:layout_height="86dp"
		                    android:layout_marginLeft="0dp"
		                    android:layout_marginTop="213dp"
		                    android:background="@drawable/slider_border_thin"
		                    android:max="100"
		                    android:maxHeight="86dp"
		                    android:paddingLeft="-10dp"
		                    android:progress="50"
		                    android:progressDrawable="@drawable/sp_slider_modal_progress_drawable"
		                    android:rotation="270"
		                    android:secondaryProgress="0"
		                    android:thumb="@drawable/sp_slider_modal_thumb"
		                    android:thumbOffset="0dp" />
		            </LinearLayout>
		
		            <ImageView
		                android:id="@+id/down_arrow"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="9dp"
		                android:src="@drawable/modal_slider_down_arrow" />
		
		            <LinearLayout
		                android:id="@+id/sp_slider_modal_value_label_holder"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="15dp"
		                android:orientation="horizontal" >
		
		                <LinearLayout
		                    android:layout_width="0dp"
		                    android:layout_height="match_parent"
		                    android:layout_weight="1" />
		
		                <TextView
		                    android:id="@+id/value_label"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="2.0"
		                    android:textColor="@color/white"
		                    android:textSize="23dp" />
		
		                <LinearLayout
		                    android:layout_width="0dp"
		                    android:layout_height="match_parent"
		                    android:layout_weight="1"
		                    android:gravity="left|bottom" >
		
		                    <TextView
		                        android:id="@+id/units_label"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginBottom="1dp"
		                        android:layout_marginLeft="5dp"
		                        android:text="@string/seconds_abbreviation"
		                        android:textColor="@color/white" />
		                </LinearLayout>
		            </LinearLayout>
			</LinearLayout>

		    <LinearLayout
		        android:id="@+id/ag_pulse_width_slider_group"
		        android:layout_width="@dimen/agitation_slider_width"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:layout_marginRight="20dp"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
			    
			    <TextView
			        android:id="@+id/title_label"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="15dp"
			        android:text="Pulse Width"
			        android:textColor="@color/white"
			        android:textSize="25dp" />
		
		            <ImageView
		                android:id="@+id/up_arrow"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="15dp"
		                android:src="@drawable/modal_slider_up_arrow" />
		
		            <LinearLayout
		                android:id="@+id/sp_slider_modal_seek_bar_holder"
		                android:layout_width="fill_parent"
		                android:layout_height="510dp"
		                android:layout_marginTop="7dp"
		                android:gravity="center_horizontal"
		                android:orientation="horizontal" >
		
		                <SeekBar
		                    android:id="@+id/seek_bar"
		                    android:layout_width="510dp"
		                    android:layout_height="86dp"
		                    android:layout_marginLeft="0dp"
		                    android:layout_marginTop="213dp"
		                    android:background="@drawable/slider_border_thin"
		                    android:max="100"
		                    android:maxHeight="86dp"
		                    android:paddingLeft="-10dp"
		                    android:progress="50"
		                    android:progressDrawable="@drawable/sp_slider_modal_progress_drawable"
		                    android:rotation="270"
		                    android:secondaryProgress="0"
		                    android:thumb="@drawable/sp_slider_modal_thumb"
		                    android:thumbOffset="0dp" />
		            </LinearLayout>
		
		            <ImageView
		                android:id="@+id/down_arrow"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="9dp"
		                android:src="@drawable/modal_slider_down_arrow" />
		
		            <LinearLayout
		                android:id="@+id/sp_slider_modal_value_label_holder"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="15dp"
		                android:orientation="horizontal" >
		
		                <LinearLayout
		                    android:layout_width="0dp"
		                    android:layout_height="match_parent"
		                    android:layout_weight="1" />
		
		                <TextView
		                    android:id="@+id/value_label"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="0.5"
		                    android:textColor="@color/white"
		                    android:textSize="23dp" />
		
		                <LinearLayout
		                    android:layout_width="0dp"
		                    android:layout_height="match_parent"
		                    android:layout_weight="1"
		                    android:gravity="left|bottom" >
		
		                    <TextView
		                        android:id="@+id/units_label"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginBottom="1dp"
		                        android:layout_marginLeft="5dp"
		                        android:text="@string/seconds_abbreviation"
		                        android:textColor="@color/white" />
		                </LinearLayout>
		            </LinearLayout>
		
			</LinearLayout>
		    
			<TextView
			    android:id="@+id/start_max_label"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="left|top"
			    android:layout_marginTop="105dp"
			    android:layout_marginLeft="150dp"
			    android:text="360"
			 	android:textColor="@color/white" />
			<TextView
			    android:id="@+id/start_min_label"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="left|bottom"
			    android:layout_marginTop="590dp"
			    android:layout_marginLeft="150dp"
			    android:text="0"
			 	android:textColor="@color/white" />

			<TextView
			    android:id="@+id/duration_max_label"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="310dp"
			    android:layout_marginTop="105dp"
			    android:gravity="left|top"
			    android:text="15"
			    android:textColor="@color/white" />

			<TextView
			    android:id="@+id/duration_min_label"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="left|bottom"
			    android:layout_marginTop="590dp"
			    android:layout_marginLeft="310dp"
			    android:text="0"
			 	android:textColor="@color/white" />

			<TextView
			    android:id="@+id/pulse_max_label"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="470dp"
			    android:layout_marginTop="105dp"
			    android:gravity="left|top"
			    android:text="1.0"
			    android:textColor="@color/white" />

			<TextView
			    android:id="@+id/pulse_min_label"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="left|bottom"
			    android:layout_marginTop="590dp"
			    android:layout_marginLeft="470dp"
			    android:text="0"
			 	android:textColor="@color/white" />
		</FrameLayout>
			
		<!-- this is the place for the buttons -->
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >
		    <LinearLayout
		        android:id="@+id/sp_slider_modal_button_holder"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginTop="15dp"
		        android:gravity="center_horizontal"
		        android:padding="5dp" >
		        
		        <LinearLayout
		            android:id="@+id/sp_slider_modal_cancel_btn"
		            android:layout_width="0dp"
		            android:layout_height="45dp"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:layout_marginRight="5dp"
		            android:background="@drawable/border_light_9" >
		            <TextView 
		                android:id="@+id/sp_slider_modal_cancel_label"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Cancel"
		                android:textColor="@color/white"
		                android:textSize="23dp" />
		        </LinearLayout>
			        	        
		        <LinearLayout
		            android:id="@+id/sp_slider_modal_save_btn"
		            android:layout_width="0dp"
		            android:layout_height="45dp"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:layout_marginLeft="5dp"
		            android:background="@drawable/border_light_9" >
		            <TextView 
		                android:id="@+id/sp_slider_modal_save_label"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Save"
		                android:textColor="@color/white"
		                android:textSize="23dp" />
		        </LinearLayout>
		        	        
		    </LinearLayout>
		    
		</LinearLayout>
   	</LinearLayout>
</FrameLayout>
