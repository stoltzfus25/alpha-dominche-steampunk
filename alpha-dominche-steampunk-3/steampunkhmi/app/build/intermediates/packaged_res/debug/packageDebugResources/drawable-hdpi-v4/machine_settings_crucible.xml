<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer_layout"
    android:layout_width="120dp"
    android:layout_height="350dp"
    android:layout_marginLeft="20dp"
    android:background="@color/main_bkgd"
    tools:context=".SPMachineSettingsActivity" >
    
	<LinearLayout
	      android:id="@+id/machine_settings_crucible_logo"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone" >

          <ImageView
           android:id="@+id/settings_disabled_crucible_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/settings_disabled_crucible" />
  
    </LinearLayout>
       
	<LinearLayout
	       android:id="@+id/machine_settings_crucible_locked"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone" >
		
		   <FrameLayout
	           android:layout_width="match_parent"
	           android:layout_height="match_parent" >
	        
	           <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/border_dark" />
			    
	           <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/settings_locked_crucible" />
	            
	           <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical|center_horizontal"
		            android:adjustViewBounds="true"
	                android:maxWidth="19dp"
		            android:src="@drawable/icon_lock" />
	            
	        </FrameLayout>
  
    </LinearLayout>
       
	<LinearLayout
	    android:id="@+id/machine_settings_crucible_unlocked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
		
	    <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
        
            <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/border_light" />
                    
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:adjustViewBounds="true"
                android:maxWidth="19dp"
                android:src="@drawable/icon_unlock" />

        </FrameLayout>
  
    </LinearLayout>
	        
</FrameLayout>