<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sp_crucible_modal_width"
    android:layout_height="@dimen/sp_crucible_modal_height"
    android:background="@drawable/slider_border_thin"
    android:gravity="center"
    android:layout_gravity="center" ><!--android:layout_height="@dimen/sp_slider_modal_height"-->
    
    <TextView
		    android:id="@+id/sp_crucible_modal_title"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_gravity="center_horizontal"
		    android:text="Temperature too low, please wait..."
		    android:textSize="@dimen/sp_crucible_modal_text_size"
		    android:textColor="@color/white"
		    android:gravity="center" />

    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:layout_marginTop="45dp"
	    android:layout_marginLeft="145dp">
	    
		<TextView
		    android:id="@+id/sp_crucible_modal_current_temp_label"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Current : "
		    android:textSize="@dimen/sp_crucible_modal_text_size"
		    android:textColor="@color/white" />
		
		<TextView
		    android:id="@+id/sp_crucible_modal_current_temp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/sp_crucible_modal_text_size"
		    android:textColor="@color/white" />
	
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:layout_marginTop="75dp"
	    android:layout_marginLeft="145dp">
	    
		<TextView
		    android:id="@+id/sp_crucible_modal_target_temp_label"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Target   : "
		    android:textSize="@dimen/sp_crucible_modal_text_size"
		    android:textColor="@color/white" />
		
		<TextView
		    android:id="@+id/sp_crucible_modal_target_temp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/sp_crucible_modal_text_size"
		    android:textColor="@color/white" />
		
	</LinearLayout>
	
	<Button 
	    android:id="@+id/sp_crucible_modal_okay_button"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:text= "OK"
	    android:textColor="@color/white"
	    android:background="@drawable/slider_border_thin"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal" />
	
</FrameLayout>
