<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black"
    android:gravity="center" >
    
    <LinearLayout
        android:id="@+id/pw_reset_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="35dp"
        android:paddingBottom="40dp" >
        
        <TextView
            android:id="@+id/sp_modal_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Password Reset"
            android:textColor="@color/white"
            android:textSize="25dp" />
        
        <EditText
            android:id="@+id/pw_reset_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/submit_button_border"
            android:hint="Username" />
        
        <TextView 
            android:id="@+id/pw_reset_or_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or:"
            android:textColor="@color/white" />
        
        <EditText
            android:id="@+id/pw_reset_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/submit_button_border"
            android:hint="Email" />
        
        <TextView
            android:id="@+id/pw_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:background="@drawable/submit_button_border" />
        
        </LinearLayout>

</RelativeLayout>
