<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sp_pin_modal_width"
    android:layout_height="@dimen/sp_pin_modal_height"
    android:background="@drawable/slider_border_thin"
    android:gravity="center"
    android:layout_gravity="center" ><!--android:layout_height="@dimen/sp_slider_modal_height"-->
    
    <TextView
		    android:id="@+id/sp_pin_title"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_gravity="center_horizontal"
		    android:text="Enter Pin Number"
		    android:textSize="@dimen/sp_pin_text_size"
		    android:textColor="@color/white"
		    android:gravity="center" />
    
    <TextView
		    android:id="@+id/sp_pin_title2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_gravity="center_horizontal"
		    android:text="Enter New Pin Number"
		    android:textSize="@dimen/sp_pin_text_size"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:visibility="invisible" />
    
    <TextView
		    android:id="@+id/sp_pin_title3"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_gravity="center_horizontal"
		    android:text="Enter New Pin Again"
		    android:textSize="@dimen/sp_pin_text_size"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:visibility="invisible" />

   <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:layout_marginTop="55dp"
	    android:layout_gravity="center_horizontal">
	    
		<EditText
	            android:id="@+id/sp_pin_number1"
	            android:layout_width="55dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:paddingLeft="20dp"
	            android:background="@drawable/text_field_border"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:inputType="numberPassword"
	            android:maxLength="1"
	            android:nextFocusDown="@+id/sp_pin_number2"
	            android:textColor="@color/white"
	            android:textSize="@dimen/account_settings_input_text"
	            android:selectAllOnFocus="true" />
		
		<EditText
	            android:id="@+id/sp_pin_number2"
	            android:layout_width="55dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:paddingLeft="20dp"
	            android:background="@drawable/text_field_border"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:inputType="numberPassword"
	            android:maxLength="1"
	            android:nextFocusDown="@+id/sp_pin_number3"
	            android:textColor="@color/white"
	            android:textSize="@dimen/account_settings_input_text"
	            android:selectAllOnFocus="true" />
		
		<EditText
	            android:id="@+id/sp_pin_number3"
	            android:layout_width="55dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:paddingLeft="20dp"
	            android:background="@drawable/text_field_border"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:inputType="numberPassword"
	            android:maxLength="1"
	            android:nextFocusDown="@+id/sp_pin_number4"
	            android:textColor="@color/white"
	            android:textSize="@dimen/account_settings_input_text"
	            android:selectAllOnFocus="true" />
		
		<EditText
	            android:id="@+id/sp_pin_number4"
	            android:layout_width="55dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:paddingLeft="20dp"
	            android:background="@drawable/text_field_border"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:inputType="numberPassword"
	            android:maxLength="140"
	            android:textColor="@color/white"
	            android:textSize="@dimen/account_settings_input_text"
	            android:selectAllOnFocus="true" />
	
	</LinearLayout>

   <TextView
		    android:id="@+id/sp_pin_invalid_input"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="60dp"
		    android:layout_gravity="center_horizontal"
		    android:text="Invalid Input"
		    android:textSize="@dimen/sp_pin_text_size"
		    android:textColor="@color/red"
		    android:gravity="center"
		    android:visibility="gone" />
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:layout_marginTop="110dp"
	    android:paddingBottom="15dp"
	    android:layout_gravity="center_horizontal">
	    
	    <Button 
		    android:id="@+id/sp_pin_cancel_button"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:text= "Cancel"
		    android:textColor="@color/white"
		    android:background="@drawable/slider_border_thin"/>
	    
	    <Button 
		    android:id="@+id/sp_pin_submit_button"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:text= "Submit"
		    android:textColor="@color/white"
		    android:background="@drawable/slider_border_thin" />
	    
	</LinearLayout>
	
</FrameLayout>
