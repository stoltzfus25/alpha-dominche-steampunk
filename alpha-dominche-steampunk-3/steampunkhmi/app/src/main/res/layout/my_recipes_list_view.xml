<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		
		<FrameLayout
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/lib_element_bkgd">
    	
			<TextView
			    android:id="@+id/name_label"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="left"
			    android:textColor="@color/white"
			    android:layout_marginLeft="15dp"
			    android:layout_marginTop="5dp" />
		
		</FrameLayout>  
		
		<ImageView
		    android:id="@+id/recipe_type_image"
		    android:src="@drawable/bean_gray"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="2dp"
		    android:layout_marginLeft="2dp" />
		<ImageView
		    android:id="@+id/favorite_star_image"
		    android:src="@drawable/teal_star"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginTop="7dp"
		    android:layout_marginRight="8dp"
		    android:visibility="gone" />
		
	</FrameLayout>
	
	<LinearLayout
	    android:id="@+id/my_recipes_dropdown"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="35dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_gravity="center_horizontal"
	    android:visibility="visible" >

	    <FrameLayout
	        android:id="@+id/my_recipes_edit_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/edit_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	    
	    <FrameLayout
	        android:id="@+id/my_recipes_duplicate_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/duplicate_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	    
	    <FrameLayout
	        android:id="@+id/my_recipes_publish_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/publish_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	    <FrameLayout
	        android:id="@+id/my_recipes_favorite_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/content_border" >
	        
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/favorite_recipe_button_text"
			    android:gravity="center"
			    android:textColor="@color/white"
	            android:textSize="12sp" />	        
	        
	    </FrameLayout>
	</LinearLayout>
	
</FrameLayout>