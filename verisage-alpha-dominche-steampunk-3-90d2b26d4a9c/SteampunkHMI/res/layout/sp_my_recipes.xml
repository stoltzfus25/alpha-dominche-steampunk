<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyRecipesEditor" >

   <LinearLayout
        android:id="@+id/my_recipes_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/recipe_bkgd"
        android:orientation="vertical"
        android:paddingLeft="@dimen/recipe_top_box_side_margins"
        android:paddingRight="@dimen/recipe_top_box_side_margins" >

        <LinearLayout
            android:id="@+id/my_recipes_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_save" />

            <TextView
                android:id="@+id/my_recipes_layout_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="My Recipes"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="@dimen/recipe_editor_title_text_height" />

            <ImageView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/x1280" />

        </LinearLayout>
        
        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:layout_marginLeft="8dp" >
            
                <TextView
                    android:id="@+id/my_recipes_company_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:textSize="@dimen/my_recipes_company_name" />
 
        </LinearLayout>
        
        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_marginTop="-5dp">
            
                <TextView
                    android:id="@+id/my_recipes_location"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/white"
	                android:textStyle="italic"
	                android:layout_marginLeft="33dp"
	                android:textSize="@dimen/my_recipes_company_location" />
 
        </LinearLayout>
        
        <ListView
            android:id="@+id/my_recipes_list"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </LinearLayout>

	  
</RelativeLayout>
